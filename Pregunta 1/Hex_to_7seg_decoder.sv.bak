module Hex_to_7seg_decoder (
    input  logic [3:0] hex_in,      // Entrada de 4 bits 
    output logic [6:0] segments_out // Salida para 7 segmentos (g,f,e,d,c,b,a)
                                    
);

    // AsignaciÃ³n de bits de entrada
    logic s3, s2, s1, s0;
    assign s3 = hex_in[3];
    assign s2 = hex_in[2];
    assign s1 = hex_in[1];
    assign s0 = hex_in[0];

   
    // Segmento 'a' 
    assign segments_out[0] = (~s3 & ~s2 & ~s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 &  s0) | 
                             (~s3 &  s2 & ~s1 &  s0) | 
                             (~s3 &  s2 &  s1 & ~s0) | 
                             (~s3 &  s2 &  s1 &  s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 &  s0) | 
                             ( s3 & ~s2 &  s1 & ~s0) | 
                             ( s3 &  s2 & ~s1 & ~s0) | 
                             ( s3 &  s2 &  s1 & ~s0) | 
                             ( s3 &  s2 &  s1 &  s0);  

    // Segmento 'b' (segments_out[1])
    // ON para: 0, 1, 2, 3, 4, 7, 8, 9, A, D
    assign segments_out[1] = (~s3 & ~s2 & ~s1 & ~s0) | 
                             (~s3 & ~s2 & ~s1 &  s0) | 
                             (~s3 & ~s2 &  s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 &  s0) | 
                             (~s3 &  s2 & ~s1 & ~s0) | 
                             (~s3 &  s2 &  s1 &  s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 &  s0) | 
                             ( s3 & ~s2 &  s1 & ~s0) | 
                             ( s3 &  s2 & ~s1 &  s0);  

    // Segmento 'c' (segments_out[2]) - CORREGIDO
    // ON para: 0, 1, 3, 4, 5, 6, 7, 8, 9, A, B, D
    assign segments_out[2] = (~s3 & ~s2 & ~s1 & ~s0) | 
                             (~s3 & ~s2 & ~s1 &  s0) | 
                             (~s3 & ~s2 &  s1 &  s0) | 
                             (~s3 &  s2 & ~s1 & ~s0) | 
                             (~s3 &  s2 & ~s1 &  s0) | 
                             (~s3 &  s2 &  s1 & ~s0) | 
                             (~s3 &  s2 &  s1 &  s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 &  s0) | 
                             ( s3 & ~s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 &  s1 &  s0) | 
                             ( s3 &  s2 & ~s1 &  s0);  

    // Segmento 'd' (segments_out[3])
    // ON para: 0, 2, 3, 5, 6, 8, B, C, D, E
    assign segments_out[3] = (~s3 & ~s2 & ~s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 &  s0) | 
                             (~s3 &  s2 & ~s1 &  s0) | 
                             (~s3 &  s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 &  s1 &  s0) | 
                             ( s3 &  s2 & ~s1 & ~s0) | 
                             ( s3 &  s2 & ~s1 &  s0) | 
                             ( s3 &  s2 &  s1 & ~s0);  

    // Segmento 'e' (segments_out[4]) - CORREGIDO
    // ON para: 0, 2, 6, 8, A, B, C, D, E, F
    assign segments_out[4] = (~s3 & ~s2 & ~s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 & ~s0) | 
                             (~s3 &  s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 &  s1 &  s0) | 
                             ( s3 &  s2 & ~s1 & ~s0) | 
                             ( s3 &  s2 & ~s1 &  s0) | 
                             ( s3 &  s2 &  s1 & ~s0) | 
                             ( s3 &  s2 &  s1 &  s0);  

    // Segmento 'f' (segments_out[5])
    // ON para: 0, 4, 5, 6, 8, 9, A, B, C, E, F
    assign segments_out[5] = (~s3 & ~s2 & ~s1 & ~s0) | 
                             (~s3 &  s2 & ~s1 & ~s0) | 
                             (~s3 &  s2 & ~s1 &  s0) | 
                             (~s3 &  s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 &  s0) | 
                             ( s3 & ~s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 &  s1 &  s0) | 
                             ( s3 &  s2 & ~s1 & ~s0) | 
                             ( s3 &  s2 &  s1 & ~s0) | 
                             ( s3 &  s2 &  s1 &  s0);  

    // Segmento 'g' (segments_out[6])
    // ON para: 2, 3, 4, 5, 6, 8, 9, A, B, D, E, F
    assign segments_out[6] = (~s3 & ~s2 &  s1 & ~s0) | 
                             (~s3 & ~s2 &  s1 &  s0) | 
                             (~s3 &  s2 & ~s1 & ~s0) | 
                             (~s3 &  s2 & ~s1 &  s0) | 
                             (~s3 &  s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 & ~s0) | 
                             ( s3 & ~s2 & ~s1 &  s0) | 
                             ( s3 & ~s2 &  s1 & ~s0) | 
                             ( s3 & ~s2 &  s1 &  s0) | 
                             ( s3 &  s2 & ~s1 &  s0) | 
                             ( s3 &  s2 &  s1 & ~s0) | 
                             ( s3 &  s2 &  s1 &  s0);  

endmodule